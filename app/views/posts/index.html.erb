<div class= "background">
<h3 class ="index-post">登録済み作品一覧</h3>
<table class="bisque">
<thead>
<tr>

<th>作品画像</th>
<th>タイトル名</th>
<th>作品紹介</th>
<th>登録日</th>
</tr>
</thead>

<tbody>

<% @posts.each do |post| %>

<tr>
<td><%= image_tag post.image ,size: "100x250" if post.image.present? %></td><!--この文がdbから写真画像を表示させている -->
<td><%= link_to "#{post.post_name}", {controller: 'posts', action: 'show', id: post.id},class:"post" %> </td>
<td> <%= post.introduction%> </td>
<td> <%= post.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
</tr>
<% end %>
</div>
</tbody>
</table>

